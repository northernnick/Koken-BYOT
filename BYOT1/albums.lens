<!DOCTYPE html>
<head>
  <koken:meta />
  <koken:title />
  <koken:settings />
</head>
<body>
<header>
  <h1>{{ site.title }}</h1>
  <nav>
    <koken:navigation />
  </nav>
</header>
<koken:load>
  <ol class="grid">
    <koken:loop>
      <li>
        <koken:link>
          <koken:img size="3:2" />
        </koken:link>
        <h2>
          <koken:link>
            {{ album.title }}
          </koken:link>
        </h2>
      </li>
    </koken:loop>
  </ol>
  <koken:pagination limit="20">
    <koken:pagination_previous>
      <koken:link title="Previous">
        &larr;
      </koken:link>
    </koken:pagination_previous>
    <koken:pagination_limited_previous>
      <koken:link>
        ...
      </koken:link>
    </koken:pagination_limited_previous>
    <koken:loop>
      <koken:link class="{{ is_current }}" title="{{ number }}">
        {{ number }}
      </koken:link>
    </koken:loop>
    <koken:pagination_limited_next>
      <koken:link>
        ...
      </koken:link>
    </koken:pagination_limited_next>
    <koken:pagination_next>
      <koken:link title="Next">
        &rarr;
      </koken:link>
    </koken:pagination_next>
  </koken:pagination>
<koken:else>
  <koken:note>
    No public albums found
  </koken:note>
</koken:load>
<footer>
  {{ site.copyright }}
</footer>
</body>
</html>
